<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>

<BorderPane prefHeight="900.0" prefWidth="900.0" styleClass="borderPane" stylesheets="@application.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se.iths.tt.javafxtt.Paint.PaintThreeViewController">
    <top>
<VBox prefHeight="136.0" prefWidth="880.0" styleClass="vBox">
    <MenuBar>
<Menu text="File Actions">
    <MenuItem text="Save" />
    <MenuItem text="Open saved items" />
    <MenuItem text="Connect to network server" />
    <MenuItem onAction="#onActionExit" text="Exit" />
</Menu>
    </MenuBar>


    <ToolBar prefHeight="92.0" prefWidth="900.0">
<HBox alignment="CENTER" spacing="7">
    <ColorPicker fx:id="colorpicker" />
    <TextField fx:id="sizeField" />
    <Slider fx:id="sizeSlider" />
    <TextField fx:id="penSize" text="10" />
    <CheckBox fx:id="eraser" text="Eraser" />
    <Button fx:id="undo" onAction="#undo" text="undoButton" />
    <Button fx:id="redo" onAction="#redo" text="redoButton" />
</HBox>
            <ChoiceBox fx:id="choiceBox" prefWidth="150.0" />
            <TextField />
    </ToolBar>
</VBox>
</top>
    <center>
        <Canvas fx:id="canvas" height="900" onMouseClicked="#canvasClicked" styleClass="canvas" width="900">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <effect>
            <Lighting>
               <bumpInput>
                  <Shadow />
               </bumpInput>
               <light>
                  <Light.Distant>
                     <color>
                        <Color red="1.0" green="0.8379629850387573" blue="0.8379629850387573" />
                     </color>
                  </Light.Distant>
               </light>
            </Lighting>
         </effect></Canvas>
    </center>
</BorderPane>
