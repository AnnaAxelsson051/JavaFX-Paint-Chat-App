<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>

<BorderPane prefHeight="900.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se.iths.tt.javafxtt.Paint.PaintThreeViewController">
<top>
<VBox>
    <MenuBar>
<Menu text="File Actions">
    <MenuItem text="Save" />
    <MenuItem text="Open saved items" />
    <MenuItem text="Connect to network server" />
    <MenuItem onAction="#onActionExit" text="Exit" />
</Menu>

        <Menu text="Circles">
            <MenuItem onAction="#onCanvasSmallCircle" text="Small" />
            <MenuItem onAction="#onCanvasMediumCircle" text="Medium" />
            <MenuItem onAction="#onCanvasLargeCircle" text="Large" />
        </Menu>
        <Menu text="Triangles">
            <MenuItem onAction="#onCanvasSmallTringle" text="Small" />
            <MenuItem onAction="#onCanvasMediumTriangle" text="Medium" />
            <MenuItem onAction="#onCanvasLargeTriangle" text="Large" />
        </Menu>
        <Menu text="Squares">
            <MenuItem onAction="#onCanvasSmallSquare" text="Small" />
            <MenuItem onAction="#onCanvasMediumSquare" text="Medium" />
            <MenuItem onAction="#onCanvasLargeSquare" text="Large" />
        </Menu>
        <Menu text="Rectangles">
            <MenuItem onAction="#onCanvasSmallRectangle" text="Small" />
            <MenuItem onAction="#onCanvasMediumRectangle" text="Medium" />
            <MenuItem onAction="#onCanvasLargeRectangle" text="Large" />
        </Menu>
    </MenuBar>


    <ToolBar>
<HBox alignment="CENTER" spacing="7">
    <ColorPicker fx:id="colorpicker" />
    <TextField fx:id="penSize" text="10" />
    <CheckBox fx:id="eraser" text="Eraser" />
    <Button fx:id="undo" text="undoButton" onAction="#undo"/>
</HBox>
            <ChoiceBox fx:id="choiceBox" prefWidth="150.0" />
    </ToolBar>
</VBox>
</top>
    <center>
        <Canvas fx:id="canvas" height="900" onMouseClicked="#canvasClicked" width="900">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <effect>
            <Lighting>
               <bumpInput>
                  <Shadow />
               </bumpInput>
               <light>
                  <Light.Distant>
                     <color>
                        <Color red="1.0" green="0.8379629850387573" blue="0.8379629850387573" />
                     </color>
                  </Light.Distant>
               </light>
            </Lighting>
         </effect></Canvas>
    </center>
</BorderPane>
