<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>

<BorderPane prefHeight="600.0" prefWidth="700.0" styleClass="borderPane" stylesheets="@application.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se.iths.tt.javafxtt.Paint.PaintThreeViewController">
    <top>
<VBox prefHeight="100.0" prefWidth="600.0" styleClass="vBox">
    <MenuBar>
<Menu text="File Actions">
    <MenuItem text="Save" />
    <MenuItem text="Open saved items" />
    <MenuItem text="Connect to network server" />
    <MenuItem onAction="#onActionExit" text="Exit" />
</Menu>
    </MenuBar>


    <ToolBar prefHeight="92.0" prefWidth="600.0">
<HBox spacing="10">
    <GridPane >
    <ColorPicker fx:id="colorpicker" GridPane.rowIndex="0" GridPane.ColumnIndex="0"/>
    <TextField fx:id="penSize" text="10" GridPane.rowIndex="0" GridPane.ColumnIndex="1"/>
    <CheckBox fx:id="eraser" text="Eraser" GridPane.rowIndex="0" GridPane.ColumnIndex="2"/>
    <ChoiceBox fx:id="choiceBox" prefWidth="150.0" GridPane.rowIndex="1" GridPane.ColumnIndex="0"/>
    <Slider fx:id="sizeSlider" GridPane.rowIndex="1" GridPane.ColumnIndex="1"/>
    <Button fx:id="undo" onAction="#undo" text="undoButton" GridPane.rowIndex="1" GridPane.ColumnIndex="2"/>
    <Button fx:id="redo" onAction="#redo" text="redoButton" GridPane.rowIndex="1" GridPane.ColumnIndex="3"/>
    </GridPane>
</HBox>

    </ToolBar>
</VBox>
</top>
    <center>
        <Canvas fx:id="canvas" height="600" onMouseClicked="#canvasClicked" styleClass="canvas" width="800">

        </Canvas>
    </center>
</BorderPane>
